model Config {
  id                String                  @id @default(auto()) @map("_id") @db.ObjectId
  v                 Int                     @default(0) @map("__v")
  createdAt         DateTime                @default(now()) @db.Date
  name              String                  @unique(map: "name_1") @default("default")
  featuredProductId String                   @unique @db.ObjectId
  featuredProduct   Product                 @relation("featuredProduct", fields: [featuredProductId], references: [id])
  showCaseCoverId String                   @unique @db.ObjectId
  showCaseCover   Product                 @relation("showCaseCover", fields: [showCaseCoverId], references: [id])
  showCaseGridId String                   @unique @db.ObjectId
  showCaseGrid   Product                 @relation("showCaseGrid", fields: [showCaseGridId], references: [id])
  showCaseWideId String                   @unique @db.ObjectId
  showCaseWide   Product                 @relation("showCaseWide", fields: [showCaseWideId], references: [id])
}

