{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    "declaration": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "noEmitOnError": true,
    "resolveJsonModule": true,
    "rootDir": "."
  },
  "include": ["src/**/*.ts", "prisma.config.ts", "generated/**/*.ts"],
  "exclude": ["node_modules", "**/*.test.ts", "dist/**"]
}
