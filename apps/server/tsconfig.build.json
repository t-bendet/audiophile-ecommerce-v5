{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "noEmitOnError": false,
    "declaration": false,
    "declarationMap": false,
    "resolveJsonModule": true,
    "incremental": true,
    "assumeChangesOnlyAffectDirectDependencies": true
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "src/seed/**",
    "../node_modules",
    "../../node_modules",
    "../../packages/database/generated/**"
  ]
}
